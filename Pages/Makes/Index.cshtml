@page
@model Bostan_Miruna_Proiect.Pages.Makes.IndexModel

@{
    ViewData["Title"] = "Brands";
}

<h1>Brands</h1>

<br />
<p>
    <a asp-page="Create" class="btn btn-primary" style="background-color: #8b5fcc;">Add New Brand</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Make[0].MakeName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Make)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MakeName)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
